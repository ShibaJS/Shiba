<Window x:Class="Shiba.WPF.Sample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Shiba.WPF.Sample"
        xmlns:shiba="clr-namespace:Shiba;assembly=Shiba.WPF"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance local:MainWindow}"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <ListBox x:Name="ListView">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <!--<local:Text >
                        <local:Text.Value>
                            fdasfdsafdsa
                        </local:Text.Value>
                    </local:Text>-->
                    <StackPanel>
                        <TextBlock Text="{Binding Text}"/>
                        <shiba:ShibaHost>
                            <shiba:ShibaHost.Layout>
                                stack { text { text=[WPF: awesome(reverse($bind Text)), UWP:$bind UWPText] } input { text=[WPF: $bind Text, UWP:$bind UWPText] } }
                            </shiba:ShibaHost.Layout>
                        </shiba:ShibaHost>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Window>